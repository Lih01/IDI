import numpy as np
import matplotlib.pyplot as plt


fig = plt.figure()
ax = plt.axes(projection="3d")


vetor_Do = np.linspace(0, 30, 50) # 50 pontos para "Dias de Ofensiva"
vetor_Ac = np.linspace(0, 50, 50) # 50 pontos para "Atividades Concluídas"


[matriz_Do, matriz_Ac] = np.meshgrid(vetor_Do, vetor_Ac)


Ip = 5.0 # Fixando a 3ª variável (Interações Proativas)
matriz_IEO = (matriz_Do * 10) + (matriz_Ac * 5) + (Ip * 2)

surf = ax.plot_surface(matriz_Do, matriz_Ac, matriz_IEO, cmap="jet")

ax.set_title(f'Gráfico do IEO (com Ip = {Ip} fixo)')
ax.set_xlabel('Dias de Ofensiva (Do)')
ax.set_ylabel('Atividades Concluídas (Ac)')
ax.set_zlabel('IEO (Resultado)')

fig.colorbar(surf, shrink=0.5, aspect=5)

plt.show()
